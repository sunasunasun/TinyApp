<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<body style="font-size:20px; padding:50px;">
  <!-- Add EJS code here -->
  <% include ./partials/_header %>
  <a href='/urls/new'>Create New TinyURL</a>
  <% for(var shortURL in urls) { %>
    <form method="POST" action="/urls/<%= shortURL %>/delete">
      <ul>
        <li><%= shortURL %> - <%= urls[shortURL].longURL %>
          <button type="submit" class="btn btn-danger">Delete</button>
           <a class="btn btn-primary" href="/urls/<%= shortURL %>">Edit</a>
        </li>
      </ul>
    </form>
  <% } %>
</body>
</html>

